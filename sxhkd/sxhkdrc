# terminal emulator
alt + Return
  urxvt

# program launcher
alt + {_,shift} + p
  rofi -show {drun,run}

# reload keybindings
alt + Escape
	pkill -USR1 -x sxhkd

# lock screen
alt + ctrl + l
  ~/.config/i3/lock.sh

# quit bspwm normally
alt + ctrl + Escape
	bspc quit

# select or move nodes using vim direction keys
alt + {_,shift} + {h,j,k,l}
  bspc node --{focus,swap} {west,south,north,east}

# close or kill applications
alt + {_,shift} + q
  bspc node --{close,kill}

# toggle fullscreen/floating on a node
alt + {_,shift} + f
  state={floating,fullscreen}; \
  bspc query -N -n "focused.$\{state\}" && state='tiled'; \
  bspc node --state "$state"

# switch desktops
alt + {1-9,0}
  bspc desktop --focus ^{1-9,10}

# move node to desktop on focused monitor
alt + shift + {1-9,0}
  bspc node --to-desktop focused:^{1-9,10}

# screenshot
alt + {_,shift} + Print
  scrot {-m,-s} ~/Pictures/screenshots/'%Y-%m-%d_$wx$h.png'

#
# Resize
#

# expand the tiled space in the given direction
alt + super + {h,j,k,l}
	bspc node { \
    @west --ratio -10,  \
    @south --ratio +10, \
    @north --ratio -10, \
    @east --ratio +10   \
  }

# contract the tiled space in the given direction
alt + super + shift + {h,j,k,l}
	bspc node { \
    @east --ratio -10,  \
    @north --ratio +10, \
    @south --ratio -10, \
    @west --ratio +10   \
  }

# move a floating window
alt + {Left,Down,Up,Right}
	xdo move {-x -20,-y +20,-y -20,-x +20}

#
# Mouse
#

# focus
~button1
	bspc pointer -g focus

# start move/resize
alt + button{1-3}
	; bspc pointer -g {move,resize_side,resize_corner}

# end move/resize
alt + @button{1-3}
	bspc pointer -u

#
# Media keys
#

XF86Audio{RaiseVolume,LowerVolume,Mute}
  amixer sset Master {5%+,5%-,toggle}

